<div class="related-products">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h2 class="section-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {%- liquid
      assign products_count = section.settings.products_to_show
      assign current_product_id = product.id
      assign related_collection = section.settings.related_collection
      
      # Use specified collection or fall back to first product collection
      if related_collection != blank
        assign collection_to_use = collections[related_collection]
      elsif product.collections.size > 0
        assign collection_to_use = product.collections.first
      endif
    -%}

    {% if collection_to_use and collection_to_use.products.size > 0 %}
      <div class="product-grid">
        {%- assign products_shown = 0 -%}
        {% for product_item in collection_to_use.products %}
          {% if product_item.id != current_product_id and products_shown < products_count %}
            <div class="product-card">
              <a href="{{ product_item.url }}">
                {% if product_item.featured_image %}
                  {{ product_item.featured_image | image_url: width: 400 | image_tag: loading: 'lazy', alt: product_item.title }}
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
                <h3 class="product-title">{{ product_item.title }}</h3>
                <p class="product-price">{{ product_item.price | money }}</p>
              </a>
            </div>
            {%- assign products_shown = products_shown | plus: 1 -%}
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

<style>
  .related-products {
    margin-top: 4rem;
    padding-top: 4rem;
    border-top: 1px solid #eee;
  }
  
  .section-heading {
    text-align: center;
    margin-bottom: 2rem;
  }
</style>

{% schema %}
{
  "name": "Related Products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "You may also like"
    },
    {
      "type": "collection",
      "id": "related_collection",
      "label": "Related collection (optional)",
      "info": "If not set, will use the product's first collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 6,
      "step": 1,
      "label": "Number of products to show",
      "default": 4
    }
  ]
}
{% endschema %}
